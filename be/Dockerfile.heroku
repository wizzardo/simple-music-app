FROM bellsoft/liberica-openjdk-alpine:11


WORKDIR /opt/webapp

RUN wget https://johnvansickle.com/ffmpeg/releases/ffmpeg-release-amd64-static.tar.xz \
    && tar xf ffmpeg-release-amd64-static.tar.xz \
    && mv ffmpeg-5.0.1-amd64-static/ffmpeg . \
    && mv ffmpeg-5.0.1-amd64-static/ffprobe . \
    && rm -rf ffmpeg-5.0.1-amd64-static \
    && rm ffmpeg-release-amd64-static.tar.xz

RUN apk --no-cache add imagemagick

COPY ./build/libs/be-0.0.1-SNAPSHOT.jar .

CMD ["java", "-Dspring.profiles.active=docker", "-Xss512k", "-Xmx192m", "-XX:InitialCodeCacheSize=4096", "-verbose:gc", "-XX:+PrintGCDetails", "-jar", "be-0.0.1-SNAPSHOT.jar"]